function renderPlans(plans) {
    const grid = document.querySelector('.plans-grid');
    grid.innerHTML = plans.map(plan => `
        <div class="plan-card" data-category="${plan.category}">
            <div class="plan-header">
                <span class="plan-number">Plan No. ${plan.number}</span>
                <span class="uin">UIN: ${plan.uin}</span>
            </div>
            <h2>${plan.name}</h2>
            <div class="plan-content">
                <div class="plan-icon">
                    <i class="fas ${getCategoryIcon(plan.category)}"></i>
                </div>
                <div class="plan-status">
                    <span class="withdrawn-badge">Withdrawn</span>
                    <p class="withdrawal-note">This plan is no longer available for new purchases</p>
                </div>
            </div>
            <a href="/policies/withdrawn/${plan.number}" class="btn-plan-details">
                <span>View Details</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    `).join('');
}

function getCategoryIcon(category) {
    const icons = {
        endowment: 'fa-piggy-bank',
        ulip: 'fa-chart-line',
        pension: 'fa-hand-holding-usd',
        term: 'fa-shield-alt',
        riders: 'fa-plus-circle',
        health: 'fa-heartbeat'
    };
    return icons[category] || 'fa-file-alt';
}

// Initialize page
document.addEventListener('DOMContentLoaded', () => {
    renderPlans(plansData);
    
    // Filter functionality
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const category = e.target.dataset.category;
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            e.target.classList.add('active');
            
            const filteredPlans = category === 'all' 
                ? plansData 
                : plansData.filter(plan => plan.category === category);
            renderPlans(filteredPlans);
        });
    });

    // Search functionality
    document.getElementById('planSearch').addEventListener('input', (e) => {
        const searchTerm = e.target.value.toLowerCase();
        const filteredPlans = plansData.filter(plan => 
            plan.name.toLowerCase().includes(searchTerm) || 
            plan.number.includes(searchTerm) ||
            plan.uin.toLowerCase().includes(searchTerm)
        );
        renderPlans(filteredPlans);
    });
