<%- include('partials/header') %>

<div class="error-page">
    <div class="error-container">
        <div class="error-animation">
            <i class="fas fa-umbrella-beach error-icon error-icon-left"></i>
            <div class="error-numbers">
                <span>4</span>
                <div class="error-circle">
                    <div class="error-face">
                        <div class="error-eye left"></div>
                        <div class="error-eye right"></div>
                        <div class="error-mouth sad"></div>
                    </div>
                </div>
                <span>4</span>
            </div>
            <i class="fas fa-shield-alt error-icon error-icon-right"></i>
        </div>
        <h1 class="error-title">Policy Not Found</h1>
        <p class="error-message">We couldn't locate the insurance plan you're looking for.</p>
        <p class="error-submessage">The policy might have been withdrawn or the URL may be incorrect or the plan content is not published yet .</p>
        <div class="error-actions">
            <a href="/" class="error-btn primary">
                <i class="fas fa-home"></i> Back to Home
            </a>
            <a href="/calculator" class="error-btn secondary">
                <i class="fas fa-calculator"></i> Premium Calculator
            </a>
        </div>
        <div class="error-suggestions">
            <h3><i class="fas fa-lightbulb"></i> Need Help?</h3>
            <ul>
                <li><i class="fas fa-check-circle"></i> Check the policy number or plan name</li>
                <li><i class="fas fa-search"></i> Use our search to find your desired plan</li>
                <li><i class="fas fa-phone-alt"></i> Contact our advisor for personalized assistance</li>
            </ul>
        </div>
    </div>
</div>

