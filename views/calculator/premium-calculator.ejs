

<div class="premium-calculator">
    <div class="container">
        <h1>Premium Calculator</h1>
        <p class="section-description">Plan your insurance with our easy-to-use premium calculator</p>

        <div class="calculator-wrapper">
            <form id="premiumForm">
                <div class="form-group">
                    <label for="planType">Select Plan Type</label>
                    <select id="planType" required>
                        <option value="">Choose a plan type</option>
                        <option value="endowment">Endowment Plans</option>
                        <option value="wholeLife">Whole Life Plans</option>
                        <option value="moneyBack">Money Back Plans</option>
                        <option value="term">Term Insurance</option>
                        <option value="pension">Pension Plans</option>
                        <option value="ulip">ULIP Plans</option>
                    </select>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="dob">Date of Birth</label>
                        <input type="text" id="dob" placeholder="DD-MM-YYYY" required>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select id="gender" required>
                            <option value="">Select gender</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="sumAssured">Sum Assured (₹)</label>
                        <input type="text" id="sumAssured" placeholder="Enter amount" required>
                    </div>
                    <div class="form-group">
                        <label for="term">Policy Term (Years)*</label>
                        <input type="number" id="term" name="term" placeholder="Enter policy term years" min="5" max="40" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="paymentMode">Premium Payment Mode</label>
                    <select id="paymentMode" required>
                        <option value="">Select payment mode</option>
                        <option value="yearly">Yearly</option>
                        <option value="halfYearly">Half-Yearly</option>
                        <option value="quarterly">Quarterly</option>
                        <option value="monthly">Monthly</option>
                    </select>
                </div>

                <button type="submit" class="calculate-btn">Calculate Premium</button>
            </form>

            <div id="resultSection" class="result-section" style="display: none;">
                <h2>Premium Details</h2>
                <div class="result-grid">
                    <div class="result-item">
                        <span>Basic Premium</span>
                        <span id="basicPremium">₹0</span>
                    </div>
                    <div class="result-item total">
                        <span>Total Premium</span>
                        <span id="totalPremium">₹0</span>
                    </div>
                </div>
                <button type="button" class="recalculate-btn" onclick="resetForm()">Recalculate</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/premium-calculator.js"></script>
